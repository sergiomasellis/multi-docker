{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "sergiomasellis/multi-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "nginx",
            "image":"sergiomasellis/multi-nginx",
            "essential": true,
            "portMappings":[
                {
                    "hostPort":80,
                    "containerPort":80
                }
            ],
            "links": ["client","server"]
        },
        {
            "name": "server",
            "image":"sergiomasellis/multi-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image":"sergiomasellis/multi-worker",
            "hostname": "worker",
            "essential": false
        }
    ]
}